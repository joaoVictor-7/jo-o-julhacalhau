#include <stdio.h>

int main() {
    int quantidade_maca;
    float preco_unitario, total;


    printf("Digite o número de maçãs compradas: ");
    scanf("%d", &quantidade_maca);


    if (quantidade_maca < 12) {
        preco_unitario = 0.30;
    } else {
        preco_unitario = 0.25;
    }


    total = quantidade_maca * preco_unitario;


    printf("O valor total da compra é: R$ %.2f\n", total);

    return 0;
}
