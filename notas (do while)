#include <stdio.h>

int main(){
    float nota1, nota2, nota3;
    float soma, media;
    int resp;
    
    
     
do {
    
    printf("\n digite a primeira nota: \n");
    scanf("%f", &nota1);
    
    printf("\n digite a segunda nota: \n");
    scanf("%f", &nota2);
    
    printf("\n digite a terceira nota: \n");
    scanf("%f", &nota3);
    
    soma = nota1 + nota2 + nota3;
    
    media = soma / 3;
    
    printf("A soma das notas é: %.2f\n", soma);
    printf("\nA media das notas é: %.2f\n", media);


    printf("\n Digite 1 para fazer a media ou 2 para sair do loop  \n ");
    scanf("%d", &resp);

} while (resp==1);
       
        printf("\n Saindo do loop. . .");
        
    
    return 0;
}
