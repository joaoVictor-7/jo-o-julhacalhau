#include<stdio.h>

int main(){
    int valores[5];
    int i,soma=0;
    for (i = 0; i <5;i++){
        printf("digite o %d valor inteiro: ", i + i);
        scanf("%d", &valores[i]);
        soma+= valores[i];
    }
    float media =(float)soma /5;
    printf ("a media dos valores inteiros é: %2f\n", media );
    
    printf("valores maiores que a média: ");
    for( i = 0; i < 5;i++){
        if (valores[i] > media);{
            printf("%d", valores[i]);
        }
    }
printf("\n");
printf("valores menores que a media: ");
for( i= 0; i < 5;i++){
    if( valores[i] < media){
    printf("%d", valores [i]);
}
}
return 0;
}
